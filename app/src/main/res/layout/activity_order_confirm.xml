<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认订单"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#0099ff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Order_FirstStation_name"
                    android:text="温州南"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/Order_FirstStation_time"
                    android:text="06:29 出发"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/Order_station_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0000ff"
                    android:text="G7504"/>
                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="22dp"
                    android:src="@drawable/jiantou"/>
                <TextView
                    android:id="@+id/Order_station_useTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="02小时39分"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="杭州东"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/Order_LastStation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="09:17 到达"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:id="@+id/Order_LastStation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:textColor="@color/zitou_text_selector"
                android:id="@+id/Order_btn_shangwu"
                android:maxLines="4"
                android:background="@drawable/zitou_bg_selector"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="商务 有\n512.5"/>
            <Button
                android:textColor="@color/zitou_text_selector"
                android:id="@+id/Order_btn_yideng"
                android:background="@drawable/zitou_bg_selector"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="一等 有\n274.0"/>
            <Button
                android:textColor="@color/zitou_text_selector"
                android:id="@+id/Order_btn_erdeng"
                android:background="@drawable/zitou_bg_selector"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="二等 有\n168.0"/>
            <Button
                android:textColor="@color/zitou_text_selector"
                android:id="@+id/Order_btn_wuzuo"
                android:background="@drawable/zitou_bg_selector"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="无座 无\n168.0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="20sp"
                android:id="@+id/Order_UserName"
                android:textColor="@color/black"
                android:text=""
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"/>
            <TextView
                android:id="@+id/Order_UserID"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50sp"/>
            <TextView
                android:layout_gravity="end"
                android:id="@+id/Order_UserSeatType"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:text="二等"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/add_passanger"
            android:background="@drawable/add_passanger"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:gravity="center"
            android:background="@color/button_blue"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Odrer_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交订单"
            android:textSize="25dp"
            android:textColor="@color/text_white"/>
    </LinearLayout>

</LinearLayout>
