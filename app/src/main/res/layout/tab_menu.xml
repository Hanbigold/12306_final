<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/menu_txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg_selector"
            android:gravity="center"
            android:textColor="@color/tab_menu_text_selector"
            android:clickable="true"
            android:focusable="true"
            android:text="车票预定"/>

        <TextView
            android:id="@+id/menu_txt_sever"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg_selector"
            android:gravity="center"
            android:textColor="@color/tab_menu_text_selector"
            android:clickable="true"
            android:focusable="true"
            android:text="商务服务"/>

        <TextView
            android:id="@+id/menu_txt_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg_selector"
            android:gravity="center"
            android:textColor="@color/tab_menu_text_selector"
            android:clickable="true"
            android:focusable="true"
            android:text="订单查询"/>

        <TextView
            android:id="@+id/menu_txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg_selector"
            android:gravity="center"
            android:textColor="@color/tab_menu_text_selector"
            android:clickable="true"
            android:focusable="true"
            android:text="我的12306"/>

    </LinearLayout>

</RelativeLayout>