<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">
    <!-- 如果指定尺寸, 则线段为该尺寸宽高的矩形中间的一条线, 没有指定则跟随控件宽高 -->
    <size
        android:width="200dp"
        android:height="100dp"/>

    <!-- 线段的 颜色 和 线宽(厚度) 由 stroke 元素指定-->
    <stroke
        android:color="#00aeff"
        android:width="3dp"/>
</shape>